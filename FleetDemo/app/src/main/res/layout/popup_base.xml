<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/popup_base_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:fontFamily="@font/proximanova"/>

    <TextView
        android:id="@+id/popup_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:autoLink="web"
        android:gravity="center"
        android:minLines="1"
        android:minWidth="600dp"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:fontFamily="@font/proximanova" />

    <ScrollView
        android:id="@+id/popup_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/popup_content_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/popup_button_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:divider="@drawable/divider_vertical_white"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_negative"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="2"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:paddingBottom="@dimen/popup_btn_padding_vertical"
                android:paddingLeft="@dimen/popup_btn_padding_horizontal"
                android:paddingRight="@dimen/popup_btn_padding_horizontal"
                android:paddingTop="@dimen/popup_btn_padding_vertical"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_neutral"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="2"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:paddingBottom="@dimen/popup_btn_padding_vertical"
                android:paddingLeft="@dimen/popup_btn_padding_horizontal"
                android:paddingRight="@dimen/popup_btn_padding_horizontal"
                android:paddingTop="@dimen/popup_btn_padding_vertical"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="2"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:paddingBottom="@dimen/popup_btn_padding_vertical"
                android:paddingLeft="@dimen/popup_btn_padding_horizontal"
                android:paddingRight="@dimen/popup_btn_padding_horizontal"
                android:paddingTop="@dimen/popup_btn_padding_vertical"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>